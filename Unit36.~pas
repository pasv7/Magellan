if z_min>=strtofloat(z_draw_out[nc][i]) then z_min:=strtofloat(z_draw_out[nc][i]);   // минимум
if z_max<=strtofloat(z_draw_out[nc][i]) then z_max:=strtofloat(z_draw_out[nc][i]);   // максимум
end;


