setlength(z_draw_out,nomer_cycla+1,nomer_atoma+1);
if length(dx)=0 then setlength(dx,nomer_atoma+1);
if length(dy)=0 then setlength(dy,nomer_atoma+1);
if length(dz)=0 then setlength(dz,nomer_atoma+1);
